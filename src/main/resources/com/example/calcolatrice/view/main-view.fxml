<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.calcolatrice.controller.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label fx:id="testo" alignment="CENTER_RIGHT" prefWidth="200.0" style="-fx-border-color: black;">
            <font>
                <Font name="System Bold" size="36.0" />
            </font>
        </Label>
        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
            <children>
                <Button fx:id="pot" mnemonicParsing="false" onAction="#modifica" prefHeight="50.0" prefWidth="50.0" text="^" />
            <Button fx:id="pAperta" mnemonicParsing="false" onAction="#modifica" prefHeight="50.0" prefWidth="50.0" text="(" />
            <Button fx:id="pChiusa" layoutX="84.0" layoutY="23.0" mnemonicParsing="false" onAction="#modifica" prefHeight="50.0" prefWidth="50.0" text=")" />
                <Button fx:id="indietro" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#indietro" prefHeight="50.0" prefWidth="50.0" text="&lt;-" />
            </children>
        </HBox>
        <HBox alignment="CENTER" layoutX="30.0" layoutY="30.0" prefHeight="50.0" prefWidth="200.0">
            <children>
                <Button fx:id="btn7" mnemonicParsing="false" onAction="#modifica" prefHeight="50.0" prefWidth="50.0" text="7" textAlignment="CENTER" />
                <Button fx:id="btn8" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#modifica" prefHeight="50.0" prefWidth="50.0" text="8" />
                <Button fx:id="btn9" layoutX="60.0" layoutY="10.0" mnemonicParsing="false" onAction="#modifica" prefHeight="50.0" prefWidth="50.0" text="9" />
                <Button fx:id="molt" layoutX="110.0" layoutY="10.0" mnemonicParsing="false" onAction="#modifica" prefHeight="50.0" prefWidth="50.0" text="x">
                    <font>
                        <Font size="16.0" />
                    </font></Button>
            </children>
        </HBox>
        <HBox alignment="CENTER" layoutX="30.0" layoutY="100.0" prefHeight="50.0" prefWidth="200.0">
            <children>
                <Button fx:id="btn4" mnemonicParsing="false" onAction="#modifica" prefHeight="50.0" prefWidth="50.0" text="4" />
                <Button fx:id="btn5" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#modifica" prefHeight="50.0" prefWidth="50.0" text="5" />
                <Button fx:id="btn6" layoutX="60.0" layoutY="10.0" mnemonicParsing="false" onAction="#modifica" prefHeight="50.0" prefWidth="50.0" text="6" />
                <Button fx:id="sott" layoutX="110.0" layoutY="10.0" mnemonicParsing="false" onAction="#modifica" prefHeight="50.0" prefWidth="50.0" text="-">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Button>
            </children>
        </HBox>
        <HBox alignment="CENTER" layoutX="30.0" layoutY="170.0" prefHeight="50.0" prefWidth="200.0">
            <children>
                <Button fx:id="btn1" mnemonicParsing="false" onAction="#modifica" prefHeight="50.0" prefWidth="50.0" text="1" />
                <Button fx:id="btn2" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#modifica" prefHeight="50.0" prefWidth="50.0" text="2" />
                <Button fx:id="btn3" layoutX="60.0" layoutY="10.0" mnemonicParsing="false" onAction="#modifica" prefHeight="50.0" prefWidth="50.0" text="3" />
                <Button fx:id="add" layoutX="110.0" layoutY="10.0" mnemonicParsing="false" onAction="#modifica" prefHeight="50.0" prefWidth="50.0" text="+">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Button>
            </children>
        </HBox>
        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
            <children>
                <Button fx:id="btn0" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#modifica" prefHeight="50.0" prefWidth="100.0" text="0" />
                <Button fx:id="uguale" layoutX="110.0" layoutY="10.0" mnemonicParsing="false" onAction="#risultato" prefHeight="50.0" prefWidth="50.0" text="=">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Button>
                <Button fx:id="div" layoutX="60.0" layoutY="10.0" mnemonicParsing="false" onAction="#modifica" prefHeight="50.0" prefWidth="50.0" text=":">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </children>
        </HBox>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
         <children>
                <Button fx:id="canc" mnemonicParsing="false" onAction="#cancella" prefHeight="50.0" prefWidth="200.0" text="Cancella" />
         </children></HBox>
    </children>
</VBox>
